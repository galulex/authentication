<h1>Log in</h1>

<%= form_tag session_path do %>
  <%= label_tag :email %>
  <%= email_field_tag :email, params[:email] %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= label_tag :remember_me %>
  <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  <%= submit_tag "Log in" %>
  <%= link_to 'Forgot Password?', new_password_reset_path %>
<% end %>
